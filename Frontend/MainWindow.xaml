<Window x:Class="Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Frontend"
        mc:Ignorable="d"
        Title="Read#" Height="450" Width="800" Background="#262626">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Border CornerRadius="5" Height="30" Background="White" Padding="5" Margin="0,0,0,10">
                <ComboBox x:Name="Genres" Background="Transparent" BorderThickness="0" FontFamily="Bahnschrift" FontWeight="Bold">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Select a genre...</ComboBoxItem>
                    <ComboBoxItem>ComboBox Item #1</ComboBoxItem>
                    <ComboBoxItem>ComboBox Item #2</ComboBoxItem>
                    <ComboBoxItem>ComboBox Item #3</ComboBoxItem>
                </ComboBox>
            </Border>

            <Border CornerRadius="5" Height="30" Background="White" Padding="5" Margin="0,0,0,10">
                <ComboBox x:Name="Publishers" Background="Transparent" BorderThickness="0" FontFamily="Bahnschrift" FontWeight="Bold">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Select a publisher...</ComboBoxItem>
                    <ComboBoxItem>ComboBox Item #1</ComboBoxItem>
                    <ComboBoxItem>ComboBox Item #2</ComboBoxItem>
                    <ComboBoxItem>ComboBox Item #3</ComboBoxItem>
                </ComboBox>
            </Border>

            <Border Height="30" Padding="5" Grid.Column="1" Background="#76E8EC" CornerRadius="5" Margin="0,0,0,10">
                <Button Content="Apply Filters ✔️" Background="Transparent" BorderThickness="0" FontFamily="Bahnschrift" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="bookFilters" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="5" Grid.Column="0" Height="30" Background="White" Padding="5" Margin="0,0,5,10">
                    <TextBox Background="Transparent" BorderThickness="0" FontFamily="Bahnschrift" FontWeight="Bold"/>
                </Border>

                <Border Height="30" Padding="5" Grid.Column="1" Background="#76E8EC" CornerRadius="5" Margin="0,0,10,10">
                    <Button Content="🔍" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <Border Height="30" Padding="5" Grid.Column="2" Background="#76E8EC" CornerRadius="5" Margin="0,0,0,10">
                    <ToggleButton x:Name="btnToggleSortMenu" Content="🔃" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <Popup IsOpen="{Binding IsChecked, ElementName=btnToggleSortMenu}"
           PlacementTarget="{Binding ElementName=btnToggleSortMenu}"
           Placement="Left" StaysOpen="False" AllowsTransparency="True">
                    <Border Background="White" CornerRadius="5" Padding="10"
                BorderBrush="Black" BorderThickness="1" Width="250">
                        <StackPanel>
                            <TextBlock Text="Select Option 1:" Margin="0,5,0,2"/>
                            <ComboBox Width="200">
                                <ComboBoxItem>Option 1</ComboBoxItem>
                                <ComboBoxItem>Option 2</ComboBoxItem>
                                <ComboBoxItem>Option 3</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Select Option 2:" Margin="0,10,0,2"/>
                            <ComboBox Width="200">
                                <ComboBoxItem>Choice A</ComboBoxItem>
                                <ComboBoxItem>Choice B</ComboBoxItem>
                                <ComboBoxItem>Choice C</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>

            <Border Height="Auto" Grid.Row="1" CornerRadius="5" Padding="5" Background="#424242">
                <ListBox Background="Transparent" BorderThickness="0">
                    <ListBox.Template>
                        <ControlTemplate>
                            <Grid>
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>

                                <Border Background="#262626" Height="30" VerticalAlignment="Bottom" CornerRadius="5">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Border Padding="5" Grid.Column="1" Background="#76E8EC" CornerRadius="5" Margin="0,2,0,2">
                                            <Button Content="◀" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding CurrentPage}" Foreground="White" FontWeight="Bold" Margin="10"/>
                                        <Border Padding="5" Grid.Column="1" Background="#76E8EC" CornerRadius="5" Margin="0,2,0,2">
                                            <Button Content="▶" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </ListBox.Template>
                </ListBox>
            </Border>
            
        </Grid>
    </Grid>
</Window>
